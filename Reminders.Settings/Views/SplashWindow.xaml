<Window x:Class="Reminders.Settings.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="200" Height="300" WindowStartupLocation="CenterScreen" Topmost="True" BorderThickness="0.5" BorderBrush="{StaticResource MaterialDesignDarkBackground}" AllowsTransparency="True" Background="Transparent" WindowStyle="None">

    <Grid Background="{StaticResource MaterialDesignPaper}">
        <md:ColorZone Mode="PrimaryDark" HorizontalAlignment="Stretch" Height="20"/>
        <Image Source="/Resources/Icons/icon.ico" Width="40" Height="40"/>
        <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Center" Style="{StaticResource MaterialDesignBody1TextBlock}" Margin="10" Opacity="0.7" Text="Loading"/>
    </Grid>
</Window>