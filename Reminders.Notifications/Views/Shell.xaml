<Window x:Class="Reminders.Notifications.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d" AllowsTransparency="True" ShowInTaskbar="False" WindowStyle="None"
        prism:ViewModelLocator.AutoWireViewModel="True" Background="Transparent">

    <tb:TaskbarIcon Visibility="Visible" MenuActivation="LeftOrRightClick" PopupActivation="DoubleClick">
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Напоминания" Command="{Binding ShowRemindersCommand}"/>
                <MenuItem Header="Настройки" Command="{Binding ShowSettingsCommand}"/>
                <Separator/>
                <MenuItem Header="Выход" Command="{Binding ShutdownCommand}"/>
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>
</Window>
